<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.each do |attribute, error| %>
        <li><%= error %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <p><%= f.label(:name, "your name") %></p>
    <p><%= f.text_field :name %></p>
  </div>
  <div class="field">
    <p><%= f.label(:email, "your email-address") %></p>
    <p><%= f.text_field :email %></p>
  </div>
  <div class="field">
    <p><%= f.label(:location, "your location") %></p>
    <p><%= f.text_field :location %></p>
  </div>
  <div class="field">
    <p><%= f.label(:twitter_handle, "your twitter handle") %></p>
    <p><%= f.text_field :twitter_handle %></p>
  </div>
  <div class="field">
    <p>Do you identify as female?</p>
    <p><%= label_tag do %>
      <%= f.radio_button(:female, true)  %> Yes
    <% end %></p>
    <p><%= label_tag do %>
      <%= f.radio_button(:female, false) %> No
    <% end %></p>
  </div>
  <div class="field">
    <p>Are you a beginner in programming Ruby?</p>
    <p><%= label_tag do %>
      <%= f.radio_button(:beginner, true) %> Yes
    <% end %></p>
    <p><%= label_tag do %>
      <%= f.radio_button(:beginner, false) %> No
    <% end %></p>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
