<%= form_for(@user, url: signup_create_path) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.each do |attribute, error| %>
        <li><%= error %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <p><%= f.label(:name, "Your name") %></p>
    <p><%= f.text_field :name %></p>
  </div>
  <div class="field">
    <p><%= f.label(:email, "Your email address") %></p>
    <p><%= f.text_field :email %></p>
  </div>
  <div class="field">
    <p><%= f.label(:location, "Your location") %></p>
    <p><%= f.text_field :location %></p>
  </div>
  <div class="field">
    <p><%= f.label(:twitter_handle, "Your twitter handle") %></p>
    <p><%= f.text_field :twitter_handle %></p>
  </div>
  <div class="field">
    <p>Do you identify as female?</p>
    <p><%= label_tag do %>
      <%= f.radio_button(:female, true)  %> Yes
    <% end %></p>
    <p><%= label_tag do %>
      <%= f.radio_button(:female, false) %> No
    <% end %></p>
  </div>
  <div class="field">
    <p>Can you write simple Ruby code?</p>
    <p><%= label_tag do %>
      <%= f.radio_button(:beginner, false) %> Yes
    <% end %></p>
    <p><%= label_tag do %>
      <%= f.radio_button(:beginner, true) %> No
    <% end %></p>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>

